{% extends 'admin.html.twig' %}

{% block title %}Promotion{% endblock %}

{% block content %}
    <h1>Promotion</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ promotion.id }}</td>
            </tr>
            <tr>
                <th>DateD</th>
                <td>{{ promotion.dateD ? promotion.dateD|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateF</th>
                <td>{{ promotion.dateF ? promotion.dateF|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ promotion.prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('promotion_index') }}" class="btn btn-primary btn">Retour</a>

    <a href="{{ path('promotion_edit', {'id': promotion.id}) }}" class="btn btn-primary btn">Modifier</a>

    {{ include('promotion/_delete_form.html.twig') }}
{% endblock %}
