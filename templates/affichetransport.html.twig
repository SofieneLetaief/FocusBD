{% block body %}
<header class="masthead">
    <div class="container">
        <h1>nos transports sont:</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Idguide</th>
                <th>Type</th>
                <th>Depart</th>
                <th>Destination</th>
                <th>Prix</th>
                <th>Pays</th>
                <th>Ville</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for transport in transports %}
                <tr>
                    <td>{{ transport.id }}</td>
                    <td>{{ transport.idguide }}</td>
                    <td>{{ transport.type }}</td>
                    <td>{{ transport.depart }}</td>
                    <td>{{ transport.destination }}</td>
                    <td>{{ transport.prix }}</td>
                    <td>{{ transport.pays }}</td>
                    <td>{{ transport.ville }}</td>
                    <td>


                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>



    </div>
</header>


